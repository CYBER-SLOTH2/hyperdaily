---
const { headings } = Astro.props;
---
<nav class="border rounded-lg p-4 mb-8">
  <p class="font-semibold mb-2">Table of Contents</p>
  <ul class="space-y-1 text-sm">
    {headings.map(h => (
      <li class={h.depth === 3 ? "ml-4" : ""}>
        <a href={`#${h.slug}`} class="text-blue-600 hover:underline">
          {h.text}
        </a>
      </li>
    ))}
  </ul>
</nav>
