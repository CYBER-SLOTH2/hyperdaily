---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8422747018156672" crossorigin="anonymous"></script>
	<meta name="google-site-verification" content="EzTilDzP_a1Uc-iQwumTdzw34tGAEvdUaUPxsO8_N_8" />
	<meta name="monetag" content="d45451114044be181d5221c654248ecc">
	
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<button id="menu-toggle" aria-label="Toggle menu">â˜°</button>

		<div class="internal-links" id="menu">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
			<HeaderLink href="/contact">Contact</HeaderLink>
			<HeaderLink href="/privacy-policy">Privacy Policy</HeaderLink>
			<HeaderLink href="/terms">Terms</HeaderLink>
		</div>

		<div class="social-links">
			<a href="/" target="_blank" aria-label="Mastodon">
				<svg viewBox="0 0 16 16" width="28" height="28"><path fill="currentColor" d="M11.19 12.195c2.016-.24..." /></svg>
			</a>
			<a href="/" target="_blank" aria-label="Twitter">
				<svg viewBox="0 0 16 16" width="28" height="28"><path fill="currentColor" d="M5.026 15..." /></svg>
			</a>
			<a href="/" target="_blank" aria-label="GitHub">
				<svg viewBox="0 0 16 16" width="28" height="28"><path fill="currentColor" d="M8 0C3.58 0..." /></svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0.75em 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(0,0,0,0.05);
		position: sticky;
		top: 0;
		z-index: 50;
	}

	h2 {
		margin: 0;
		font-size: 1.1em;
	}

	h2 a {
		text-decoration: none;
		color: var(--black);
		font-weight: 600;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
	}

	.internal-links {
		display: flex;
		gap: 0.75em;
	}

	nav a {
		color: var(--black);
		text-decoration: none;
		padding: 0.5em;
	}

	nav a.active {
		border-bottom: 2px solid var(--accent);
	}

	.social-links {
		display: flex;
		gap: 0.5em;
	}

	#menu-toggle {
		display: none;
		background: none;
		border: none;
		font-size: 1.5em;
		cursor: pointer;
	}

	/* Mobile styles */
	@media (max-width: 720px) {
		#menu-toggle {
			display: block;
		}

		.internal-links {
			display: none;
			flex-direction: column;
			width: 100%;
			background: white;
			margin-top: 0.5em;
			border-top: 1px solid #eee;
		}

		.internal-links a {
			padding: 1em;
			text-align: center;
			border-bottom: 1px solid #f0f0f0;
		}

		.internal-links.show {
			display: flex;
		}

		.social-links {
			display: none;
		}
	}
</style>

<script>
document.addEventListener('DOMContentLoaded', () => {
	const menuToggle = document.getElementById('menu-toggle');
	const menu = document.getElementById('menu');
	menuToggle.addEventListener('click', () => {
		menu.classList.toggle('show');
	});
});
</script>
