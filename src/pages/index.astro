---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.pubDate - a.data.pubDate);
---

<BaseLayout
  title="AI, Automation & Technology Guides"
  description="Practical guides on AI, automation, and modern technology to help you work smarter and stay updated."
>
  <main class="container">
    
    <!-- HERO -->
    <header>
      <h1>AI, Automation & Technology Guides</h1>
      <p>
        Practical, easy-to-understand guides on artificial intelligence,
        automation workflows, productivity tools, and modern technology.
      </p>
    </header>

    <!-- LATEST POSTS -->
    <section>
      <h2>Latest Articles</h2>
      <ul>
        {posts.slice(0, 10).map(post => (
          <li>
            <a href={`/blog/${post.slug}/`}>
              {post.data.title}
            </a>
            <p>
              {post.data.description}
            </p>
          </li>
        ))}
      </ul>
    </section>

    <!-- TOPICAL AUTHORITY BLOCK -->
    <section>
      <h2>Popular Topics</h2>
      <ul>
        <li><a href="/blog/ai-automation-guide/">AI Automation</a></li>
        <li><a href="/blog/n8n-ai-workflows/">n8n Workflows</a></li>
        <li><a href="/blog/best-ai-tools/">AI Tools</a></li>
        <li><a href="/blog/workflow-automation/">Workflow Automation</a></li>
      </ul>
    </section>

    <!-- TRUST SIGNAL -->
    <section>
      <h2>Why Trust This Site?</h2>
      <p>
        All content is written for educational purposes, reviewed for clarity,
        and focused on real-world use cases. We prioritize accuracy,
        transparency, and user value over hype.
      </p>
    </section>

  </main>
</BaseLayout>
