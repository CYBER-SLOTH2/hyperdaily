---
import Layout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// Get latest blog posts
const posts = (await getCollection("blog"))
  .sort((a, b) => new Date(b.data.date ?? b.data.pubDate) - new Date(a.data.date ?? a.data.pubDate))
  .slice(0, 12);

// Safe date formatter
function formatDate(data) {
  const date = data.date ?? data.pubDate;
  if (!date) return "";
  return new Date(date).toLocaleDateString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric"
  });
}
---

<Layout title="Hyperdaily â€“ Daily Trending Blogs">
  <section class="container mx-auto py-16 text-center">
    <h1 class="text-4xl font-bold mb-4">Hyperdaily</h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
      Stay updated with what's trending across the internet, tech, business, lifestyle, culture, and everything buzzing today.
    </p>
  </section>

  <section class="container mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 py-10">
    {posts.map((post) => (
      <a
        href={`/blog/${post.id}/`}
        class="border rounded-lg p-5 hover:shadow-lg transition block"
      >
        <h2 class="text-xl font-semibold mb-2">{post.data.title}</h2>

        <p class="text-sm text-gray-600 line-clamp-3">
          {post.data.excerpt || post.data.description}
        </p>

        <p class="text-xs text-gray-400 mt-3">
          {formatDate(post.data)}
        </p>
      </a>
    ))}
  </section>
</Layout>
