---
import Layout from "../layouts/BaseLayout.astro";
---

<Layout title="Contact - Hyperdaily">
  <section class="container mx-auto py-10 prose">
    <h1>Contact Hyperdaily</h1>
    <p>
      Have suggestions, questions, or want to collaborate with us?  
      We’d love to connect — drop us a message below.
    </p>

    <form
      method="POST"
      action="https://formspree.io/f/your-id"
      class="flex flex-col gap-4 max-w-lg"
    >
      <label>
        <span>Name</span>
        <input type="text" name="name" required class="border p-2 w-full rounded" />
      </label>

      <label>
        <span>Email</span>
        <input type="email" name="email" required class="border p-2 w-full rounded" />
      </label>

      <label>
        <span>Message</span>
        <textarea
          name="message"
          rows="5"
          required
          class="border p-2 w-full rounded"
        ></textarea>
      </label>

      <button
        type="submit"
        class="bg-black text-white px-4 py-2 rounded hover:opacity-80 transition"
      >
        Send Message
      </button>
    </form>
  </section>
</Layout>
